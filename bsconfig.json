{
  "name": "my-rescript-play-site",
  "sources": [
    {
      "dir": "src",
      "subdirs": true
    }
  ],
  "package-specs": [
    {
      "module": "es6",
      "in-source": true
    }
  ],
  "suffix": ".bs.mjs",
  "bs-dependencies": [
    "@rescript/react",
    "@rescript/core",
    "@davesnx/styled-ppx/css",
    "@davesnx/styled-ppx/emotion"
  ],
  "ppx-flags": ["@davesnx/styled-ppx/ppx"],
  "jsx": {
    "version": 4,
    "mode": "automatic"
  },
  "bsc-flags": [
    "-open RescriptCore"
  ]
}